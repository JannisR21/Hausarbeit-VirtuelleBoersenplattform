<Window x:Class="HausarbeitVirtuelleBörsenplattform.Views.PasswortAendernDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Passwort ändern" 
        Height="470" 
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Stil für primäre Buttons -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1E3A8A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3B82F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#152C6D"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stil für Sekundär-Buttons -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F9FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E0F2FE"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stil für Passwort-Eingabefelder -->
        <Style x:Key="PasswordInputStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="PasswordChar" Value="●"/>
            <!-- Schwarze Punkte für Passwörter -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="False" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#1E3A8A"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#F8FAFC" CornerRadius="10" Padding="0">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="30">
                <TextBlock Text="Passwort ändern" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#1E293B" 
                           Margin="0,0,0,15"/>

                <!-- Trennlinie mit Verlauf -->
                <Border Height="3" Width="80" HorizontalAlignment="Left" Margin="0,0,0,15" CornerRadius="1.5">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#1E3A8A" Offset="0"/>
                            <GradientStop Color="#3B82F6" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <!-- Hinweis -->
                <TextBlock Text="Bitte wählen Sie ein sicheres Passwort mit mindestens 6 Zeichen."
                           FontSize="13"
                           Foreground="#64748B"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"/>

                <!-- Aktuelles Passwort -->
                <TextBlock Text="Aktuelles Passwort" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#1E293B" 
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="AktuellesPasswortBox" 
                             Style="{StaticResource PasswordInputStyle}" 
                             Margin="0,0,0,15"/>

                <!-- Neues Passwort -->
                <TextBlock Text="Neues Passwort" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#1E293B" 
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="NeuesPasswortBox" 
                             Style="{StaticResource PasswordInputStyle}" 
                             Margin="0,0,0,15"/>

                <!-- Passwort wiederholen -->
                <TextBlock Text="Passwort wiederholen" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#1E293B" 
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="PasswortWiederholenBox" 
                             Style="{StaticResource PasswordInputStyle}" 
                             Margin="0,0,0,20"/>

                <!-- Fehleranzeige -->
                <TextBlock x:Name="ErrorMessage" 
                           Foreground="#EF4444" 
                           TextWrapping="Wrap"
                           FontSize="13"
                           FontWeight="SemiBold"
                           MinHeight="20"
                           Margin="0,0,0,15"/>

                <!-- Button-Leiste -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Abbrechen-Button -->
                    <Button Grid.Column="0" 
                            Content="Abbrechen" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,10,0"
                            Width="100"
                            Height="38"
                            HorizontalAlignment="Left"
                            Click="AbbrechenButton_Click"/>

                    <!-- Speichern-Button -->
                    <Button Grid.Column="1" 
                            Content="Speichern" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="100"
                            Height="38"
                            Click="SpeichernButton_Click"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>