<UserControl x:Class="HausarbeitVirtuelleBörsenplattform.Views.PortfolioChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HausarbeitVirtuelleBörsenplattform.Views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header mit Zeitraum-Selektoren -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Zeitraum-Selektoren -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <RadioButton Content="1T" GroupName="Zeitraum" Margin="0,0,10,0" IsChecked="{Binding IsOneDay}" />
                <RadioButton Content="1W" GroupName="Zeitraum" Margin="0,0,10,0" IsChecked="{Binding IsOneWeek}" />
                <RadioButton Content="1M" GroupName="Zeitraum" Margin="0,0,10,0" IsChecked="{Binding IsOneMonth}" />
                <RadioButton Content="1J" GroupName="Zeitraum" Margin="0,0,10,0" IsChecked="{Binding IsOneYear}" />
                <RadioButton Content="Max" GroupName="Zeitraum" Margin="0,0,10,0" IsChecked="{Binding IsMax}" />
            </StackPanel>
            <!-- Performance-Anzeige -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBlock Text="Performance: " VerticalAlignment="Center"/>
                <TextBlock Text="{Binding PerformanceText}" 
                           Foreground="{Binding PerformanceColor}"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <!-- Chart -->
        <lvc:CartesianChart Grid.Row="1" 
                            Series="{Binding SeriesCollection}" 
                            LegendLocation="None"
                            DisableAnimations="True"
                            Hoverable="False"
                            DataTooltip="{x:Null}">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Zeit" 
                          Labels="{Binding Labels}"
                          DisableAnimations="True">
                    <lvc:Axis.Separator>
                        <lvc:Separator StrokeThickness="1" StrokeDashArray="2" Stroke="#e6e6e6"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Performance (%)" 
                          LabelFormatter="{Binding YFormatter}" 
                          MinValue="{Binding YMinValue}" 
                          MaxValue="{Binding YMaxValue}"
                          Foreground="Black"
                          DisableAnimations="True"
                          Position="RightTop">
                    <lvc:Axis.Sections>
                        <!-- Markieren der Nulllinie -->
                        <lvc:AxisSection Value="0" 
                                       StrokeThickness="1" 
                                       Stroke="Black" 
                                       StrokeDashArray="1"/>
                    </lvc:Axis.Sections>
                    <lvc:Axis.Separator>
                        <lvc:Separator StrokeThickness="1" StrokeDashArray="2" Stroke="#e6e6e6"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</UserControl>