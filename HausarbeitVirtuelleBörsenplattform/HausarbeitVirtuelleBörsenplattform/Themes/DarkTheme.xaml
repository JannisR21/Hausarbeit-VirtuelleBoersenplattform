<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Farben für Dark-Theme -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#202124"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#303134"/>
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#e8eaed"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#9aa0a6"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#3c4043"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#1a1a1a"/>
    <SolidColorBrush x:Key="HeaderForegroundBrush" Color="#e8eaed"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#8ab4f8"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#303134"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#3c4043"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#e8eaed"/>

</ResourceDictionary>