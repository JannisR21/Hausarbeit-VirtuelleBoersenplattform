<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Farben für Light-Theme -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#f5f9ff"/>
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#2c3e50"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#666666"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#e0e0e0"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#2c3e50"/>
    <SolidColorBrush x:Key="HeaderForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#3498db"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2c3e50"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="White"/>

</ResourceDictionary>