<Window x:Class="HausarbeitVirtuelleBörsenplattform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HausarbeitVirtuelleBörsenplattform"
        xmlns:viewmodels="clr-namespace:HausarbeitVirtuelleBörsenplattform.ViewModels"
        xmlns:views="clr-namespace:HausarbeitVirtuelleBörsenplattform.Views"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="Virtuelle Börsenplattform" Height="800" Width="1200">

    <!-- DataContext für das Hauptfenster -->
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <!-- Globale Ressourcen -->
    <Window.Resources>
        <!-- Style für die Navigationsbuttons -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495e"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#34495e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style für den Benutzer-Button (Icon) -->
        <Style x:Key="UserButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#34495e"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="15,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4e6d8d"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style für die Karten/Panels -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style für Kartenüberschriften -->
        <Style x:Key="CardHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <!-- Hauptlayout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header mit Navigation -->
            <RowDefinition Height="Auto"/>
            <!-- Status-Leiste -->
            <RowDefinition Height="Auto"/>
            <!-- Hauptbereich mit Inhalten -->
            <RowDefinition Height="*"/>
            <!-- Footer -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header mit Navigation -->
        <Grid Grid.Row="0" Background="#2c3e50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Logo -->
                <ColumnDefinition Width="*"/>
                <!-- Navigation -->
            </Grid.ColumnDefinitions>

            <!-- Logo/Titel -->
            <TextBlock Grid.Column="0" Text="Virtuelle Börsenplattform" 
                       Foreground="White" FontSize="20" FontWeight="Bold" 
                       Margin="20,15" VerticalAlignment="Center"/>

            <!-- Navigation -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button Content="Dashboard" Style="{StaticResource NavButtonStyle}" IsEnabled="False"/>
                <Button Content="Portfolio" Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Handel" Style="{StaticResource NavButtonStyle}"/>
                <Button Content="Einstellungen" Style="{StaticResource NavButtonStyle}"/>

                <!-- Benutzer-Icon mit Dropdown -->
                <Button x:Name="UserButton" Style="{StaticResource UserButtonStyle}">
                    <Button.Content>
                        <Path Data="M20,21v-2a4,4,0,0,0-4-4H8a4,4,0,0,0-4,4v2 M12,7a4,4,0,1,0-4-4,4,4,0,0,0,4,4z" Stroke="White" StrokeThickness="2" Stretch="Uniform" Width="18" Height="18"/>
                    </Button.Content>
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Profil"/>
                            <MenuItem Header="Konto"/>
                            <Separator/>
                            <MenuItem Header="Ausloggen"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Status-Leiste -->
        <Grid Grid.Row="1" Background="White" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Benutzerinformationen -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <!-- Korrigierte Version des Bindings für den Benutzernamen -->
                <TextBlock VerticalAlignment="Center">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="Willkommen, {0}">
                            <Binding Path="AktuellerBenutzer.Benutzername"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <!-- Hier verwenden wir jetzt die Kontostand-Property direkt -->
                <Border Background="#f1f8e9" CornerRadius="4" Margin="15,0,0,0" Padding="10,5">
                    <TextBlock Text="{Binding Kontostand, StringFormat=Kontostand: {0:N2} €}" Foreground="#33691e" FontWeight="SemiBold"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Hauptbereich mit Inhalten -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Obere Reihe -->
                    <RowDefinition Height="Auto"/>
                    <!-- Untere Reihe -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <!-- Linke Spalte -->
                    <ColumnDefinition Width="1*"/>
                    <!-- Rechte Spalte -->
                </Grid.ColumnDefinitions>

                <!-- Portfolio-Bereich -->
                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Header -->
                            <RowDefinition Height="*"/>
                            <!-- Inhalt -->
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Portfolio" Style="{StaticResource CardHeaderStyle}"/>
                            <TextBlock Grid.Column="1" 
                               Text="{Binding PortfolioViewModel.Gesamtwert, StringFormat=Gesamtwert: {0:N2} €}" 
                               FontWeight="SemiBold" 
                               Foreground="#2c3e50"/>
                        </Grid>

                        <!-- Portfolio-UserControl einbinden -->
                        <views:PortfolioUserControl Grid.Row="1" DataContext="{Binding PortfolioViewModel}"/>
                    </Grid>
                </Border>

                <!-- Marktdaten-Bereich -->
                <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Header -->
                            <RowDefinition Height="*"/>
                            <!-- Inhalt -->
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Marktdaten" Style="{StaticResource CardHeaderStyle}"/>
                            <TextBlock Grid.Column="1" Text="Letzte Aktualisierung: 16.04.2025 10:30" FontSize="12" Foreground="#666" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- MarktdatenUserControl einbinden -->
                        <views:MarktdatenUserControl Grid.Row="1" DataContext="{Binding MarktdatenViewModel}"/>
                    </Grid>
                </Border>

                <!-- Handels-Bereich -->
                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Header -->
                            <RowDefinition Height="*"/>
                            <!-- Inhalt -->
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Text="Aktienhandel" Style="{StaticResource CardHeaderStyle}"/>

                        <!-- Handels-UserControl einbinden -->
                        <views:HandelsUserControl Grid.Row="1" DataContext="{Binding AktienhandelViewModel}"/>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <Grid Grid.Row="4" Background="#2c3e50">
            <TextBlock Text="© 2025 Virtuelle Börsenplattform | Entwickelt von Jannis Ruhland | Daten bereitgestellt von Twelve Data API" 
                       Foreground="White" HorizontalAlignment="Center" Margin="0,15"/>
        </Grid>
    </Grid>
</Window>