<Window x:Class="HausarbeitVirtuelleBörsenplattform.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Virtuelle Börsenplattform - Login"
        Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="TitleBarStyle" TargetType="Border">
            <Setter Property="Background" Value="#2c3e50"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495e"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1a2530"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#3498db"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="8" Background="#f5f5f5" BorderBrush="#d0d0d0" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource TitleBarStyle}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Virtuelle Börsenplattform - Login" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource WindowButtonStyle}" Click="MinimizeButton_Click">
                            <Path Data="M18,12H6" Stroke="White" StrokeThickness="2"/>
                        </Button>
                        <Button Style="{StaticResource WindowButtonStyle}" Click="CloseButton_Click">
                            <Path Data="M6,6 L18,18 M6,18 L18,6" Stroke="White" StrokeThickness="2"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Hauptinhalt: Links Branding, rechts dynamischer Content -->
            <Grid Grid.Row="1">
                <!-- Rechte dynamische Ansicht (Login/Registrierung) -->
                <ContentControl x:Name="MainContent" Grid.Column="1"/>
            </Grid>
        </Grid>
    </Border>
</Window>
